<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._Page3_SelectWorkout"
    android:theme="@style/AppTheme2">

    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/font_fox"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
         />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ImageSlider"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_below="@id/textViewAppName"
        android:layout_above="@id/conLayout"
        android:paddingStart="55dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:paddingEnd="55dp" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/conLayout"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:theme="@style/AppTheme2"
        android:layout_alignParentBottom="true"
        >

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="end"
            android:theme="@style/AppTheme2"
            app:fabAlignmentMode="end"
            app:menu="@menu/bottom_navbar_menu"
            app:navigationIcon="@drawable/ic_action_settings" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_search"
            android:backgroundTint="@color/colorAccentBlue"
            app:elevation="20dp"
            app:fabSize="auto"
            app:layout_anchor="@id/bar"
/>    </androidx.coordinatorlayout.widget.CoordinatorLayout>





</RelativeLayout>