<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    app:riv_corner_radius="20dp"
    android:elevation="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:background="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
           >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageSlide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewHeader" />

            <ImageView
                android:id="@+id/imageButton_lock"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:elevation="40dp"
                app:layout_constraintBottom_toTopOf="@+id/startButton"
                app:layout_constraintEnd_toEndOf="@id/imageSlide"
                app:layout_constraintStart_toStartOf="@+id/imageSlide"
                app:layout_constraintTop_toTopOf="@+id/imageSlide"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginBottom="5dp"
                android:padding="1dp"/>


            <Button
                android:id="@+id/startButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_custom_selectworkout"
                android:fontFamily="@font/font_fox"
                android:elevation="30dp"
                android:text="Start Workout"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageSlide"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageSlide"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textViewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_custom_workoutheader"
                android:fontFamily="@font/font_fox"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="TextView"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:elevation="20dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/imageButton_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_action_star"
                android:backgroundTint="@android:color/white"
                android:elevation="10dp"
                android:scaleX="1"
                android:scaleY="1"
                app:layout_constraintBottom_toTopOf="@+id/startButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageSlide"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/imageButton_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_action_info"
                android:backgroundTint="@android:color/white"
                android:elevation="10dp"
                android:scaleX="1.1"
                android:scaleY="1.1"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton_star"
                app:layout_constraintEnd_toStartOf="@+id/imageButton_star"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageButton_star" />

            <TextView
                android:id="@+id/textViewDetails"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="25dp"
                android:background="@color/colorPrimaryDark"
                android:elevation="50dp"
                android:fontFamily="@font/graduate"
                android:padding="20dp"
                android:text="TextView"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageSlide"
                app:layout_constraintStart_toStartOf="@+id/imageSlide"
                app:layout_constraintTop_toTopOf="@+id/imageSlide" />

            <ImageButton
                android:id="@+id/imageButtonClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="55dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_action_close"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/textViewDetails"
                app:layout_constraintEnd_toEndOf="@+id/textViewDetails"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textViewDetails"
                app:layout_constraintTop_toTopOf="@+id/textViewDetails"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>