<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._Page4_AthleteWorkout">

    <ImageView
        android:id="@+id/imageViewHeader"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorAccentBlue"
        android:scaleType="matrix"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textViewAthleteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewHeader"
        android:layout_alignBottom="@+id/imageViewHeader"
        android:layout_centerInParent="true"
        android:text="Tom Brady"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/graduate"
        android:textStyle="bold"
        />
    <ImageButton
        android:id="@+id/backButton"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:foregroundTint="@android:color/white"
        android:elevation="20dp"
        android:tint="@android:color/white"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_arrow_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workoutRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageViewHeader"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>