<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/navigationHeader_profilepic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_picture_binyamin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        app:riv_oval="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/navigationHeader_profilepic"
        android:layout_alignBottom="@+id/navigationHeader_profilepic"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/navigationHeader_profilepic"
        android:text="Binyamin Robbins"
        app:layout_constraintBottom_toBottomOf="@+id/navigationHeader_profilepic"
        app:layout_constraintStart_toEndOf="@+id/navigationHeader_profilepic"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/graduate"
        app:layout_constraintTop_toTopOf="@+id/navigationHeader_profilepic" />
</androidx.constraintlayout.widget.ConstraintLayout>